<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/">News Scraper</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="nav navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="#">Saved Articles</a>
            </li>
        </ul>
    </div>
</nav>
<div class="imageContainer">
    <img src="" width="100%" height="250px">
    <div class="overlay"></div>
    <div class="centered">
        <h1>Mongo Scraper</h1>
        <h2>Saved Articles</h2>
    </div>
</div>
<div class="container">
    <div class='list-group'>
        {{#each this}}
            {{#if title}}
            <br>
            <div>
                <a hrefclass="list-group-item list-group-item-action flex-column align-items-start">
                    <h5 class="mb-1">{{title}}</h5>
                </a>
                <small>
                    <a href="{{link}}">Link to article</a>
                </small>
                <small>
                    <button data-id="{{id}}" data-toggle="modal" data-target="#myModal" class="btn btn-outline-info my-2 my-sm-0" onclick="comment(this)">Comment</button>
                    <button data-id="{{id}}" class="btn btn-outline-info my-2 my-sm-0" onclick="deleteArticle(this)">Delete Article</button>
                </small>
                <p class="mb-1">{{description}}</p>
                <br>
                <hr>
            </div>
            {{/if}}
        {{/each}}
    </div>
</div>
<!-- The Modal -->
<div class="modal" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Comment</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        
      </div>

      <div id="inputArea" style="padding: 1rem;">
        <hr>
        <textarea class="form-control" id="textArea" rows="3"></textarea>
        <button class="btn btn-primary" onclick="addComment(this)">Add/Modify Comment</button>
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>

    </div>
  </div>
</div>
<script src="./assets/js/index.js"></script>